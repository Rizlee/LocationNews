<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
  </style>

  <!--Auth-->
  <style name="EditTextAuth">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/view_auth_height</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="layout_constraintWidth_max">400dp</item>
    <item name="android:background">@drawable/edittext_bg</item>
    <item name="android:fontFamily">serif-monospace</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="MainButtonAuth">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/view_auth_height</item>
    <item name="layout_constraintWidth_max">400dp</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:background">@drawable/button_bg</item>
    <item name="android:fontFamily">serif</item>
  </style>

</resources>
