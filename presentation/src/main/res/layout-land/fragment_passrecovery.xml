<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/margin_auth_view_24dp"
      android:layout_marginStart="@dimen/margin_auth_view_24dp"
      android:text="@string/auth_forgot_pass_button"
      app:layout_constraintBottom_toTopOf="@+id/textview_passrecovery_forgot"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/TextViewTitle"
      />

  <TextView
      android:id="@+id/textview_passrecovery_forgot"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginBottom="@dimen/margin_auth_view_20dp"
      android:layout_marginEnd="@dimen/margin_auth_view_24dp"
      android:layout_marginStart="@dimen/margin_auth_view_24dp"
      android:gravity="center"
      android:text="@string/auth_reset_pass_instruction"
      android:textColor="@color/primary_light"
      app:layout_constraintBottom_toTopOf="@id/edittext_passrecovery_email"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      />

  <EditText
      android:id="@+id/edittext_passrecovery_email"
      android:layout_width="0dp"
      android:layout_height="@dimen/height_auth_edittext"
      android:layout_marginEnd="@dimen/margin_auth_view_24dp"
      android:layout_marginStart="@dimen/margin_auth_view_24dp"
      android:hint="@string/auth_email_hint"
      android:inputType="textEmailAddress"
      android:selectAllOnFocus="false"
      android:singleLine="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/EditTextAuth"
      />

  <Button
      android:id="@+id/button_passrecovery_reset"
      android:layout_width="0dp"
      android:layout_height="@dimen/height_auth_edittext"
      android:layout_marginEnd="@dimen/margin_auth_view_24dp"
      android:layout_marginStart="@dimen/margin_auth_view_24dp"
      android:layout_marginTop="@dimen/margin_auth_view_20dp"
      android:text="@string/auth_reset_pass_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/edittext_passrecovery_email"
      style="@style/MainButtonAuth"
      />
</android.support.constraint.ConstraintLayout>